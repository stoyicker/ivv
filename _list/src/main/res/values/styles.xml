<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="App.Splash">
    <item name="android:progressBarStyleHorizontal">@style/ProgressBarHorizontalMaterial</item>
  </style>

  <style name="ProgressBarHorizontalMaterial" parent="@style/Widget.AppCompat.ProgressBar.Horizontal" />

  <style name="App.Card">
    <item name="android:background">@drawable/card_background</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
  </style>

  <style name="App.AppTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="App.Title" parent="@style/TextAppearance.AppCompat.Title">
    <item name="android:background">@null</item>
    <item name="android:foreground">@null</item>
  </style>

  <style name="App.Subhead" parent="@style/TextAppearance.AppCompat.Subhead">
    <item name="android:background">@null</item>
    <item name="android:foreground">@null</item>
  </style>
</resources>
